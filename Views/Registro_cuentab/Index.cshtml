@model examen_gestion_cuenta_bancarias.Models.Registro_cuentab

<h2>Registro</h2>

@using (Html.BeginForm("EnviarMensaje", "Contacto", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name ,"Nombre")
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tipo_Cuenta ,"Tipo de cuenta")
        @Html.TextBoxFor(model => model.Tipo_Cuenta, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Tipo_Cuenta)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SaldoI , "Saldo Inicial")
        @Html.TextBoxFor(model => model.SaldoI, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SaldoI)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, "Correo electronico")
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
}

 <h1>@ViewData["Message"]</h1>